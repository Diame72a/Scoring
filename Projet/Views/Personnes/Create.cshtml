@model Projet.Models.Personne
@{
    ViewData["Title"] = "Nouveau Candidat";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <div class="card shadow border-0">
                <div class="card-header bg-white py-3 d-flex align-items-center">
                    <div class="bg-success text-white rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 40px; height: 40px;">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <h4 class="mb-0 fw-bold text-dark">Ajouter un Talent</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <h6 class="text-muted text-uppercase fw-bold small mb-3"><i class="far fa-id-card me-2"></i>Identité</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Prenom" class="form-control" placeholder="Prénom" />
                                    <label asp-for="Prenom">Prénom</label>
                                    <span asp-validation-for="Prenom" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Nom" class="form-control" placeholder="Nom" />
                                    <label asp-for="Nom">Nom</label>
                                    <span asp-validation-for="Nom" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="DateNaissance" type="date" class="form-control" placeholder="Date" />
                                    <label asp-for="DateNaissance">Date de naissance</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                                    <label asp-for="Email">Adresse Email</label>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <h6 class="text-muted text-uppercase fw-bold small mb-3 border-top pt-3"><i class="fas fa-map-marker-alt me-2"></i>Localisation</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-8">
                                <div class="form-floating">
                                    <input asp-for="Ville" class="form-control" placeholder="Ville" />
                                    <label asp-for="Ville">Ville de résidence</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="CodePostal" class="form-control" placeholder="CP" />
                                    <label asp-for="CodePostal">Code Postal</label>
                                </div>
                            </div>
                        </div>

                        <h6 class="text-muted text-uppercase fw-bold small mb-3 border-top pt-3"><i class="fas fa-briefcase me-2"></i>Expérience</h6>
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="AnneesExperienceTotal" type="number" class="form-control" placeholder="Années" min="0" />
                                    <label asp-for="AnneesExperienceTotal">Années d'expérience</label>
                                </div>
                            </div>
                            <div class="col-md-8 d-flex align-items-center">
                                <p class="text-muted small mb-0 fst-italic">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Indiquez le cumul total. Le niveau (Junior/Senior) sera calculé automatiquement par le système.
                                </p>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-light border">Annuler</a>
                            <button type="submit" class="btn text-white shadow-sm fw-bold px-4"
                                    style="border-radius: 50px; background: linear-gradient(135deg, #2af598 0%, #009efd 100%); border:none;">
                                Enregistrer le profil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>