@model Projet.Models.Personne

@{
    ViewData["Title"] = "Nouveau Candidat";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4 mx-auto" style="max-width: 1000px;">
        <div class="d-flex align-items-center">
            <div class="rounded p-2 me-3 shadow-sm text-white"
                 style="background: linear-gradient(135deg, #2af598 0%, #009efd 100%);">
                <i class="fas fa-user-plus fa-lg"></i>
            </div>
            <div>
                <h4 class="fw-bold mb-0 text-dark">Nouveau Candidat</h4>
                <small class="text-muted">Remplissez les informations pour créer une fiche talent.</small>
            </div>
        </div>
        <a asp-action="Index" class="btn btn-light border text-muted shadow-sm btn-sm px-4 rounded-pill">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <form asp-action="Create">
                    <div class="card-body p-5">

                        <div class="row g-5">
                            <div class="col-md-6">
                                <h6 class="fw-bold text-muted text-uppercase small mb-4 border-bottom pb-2">
                                    <i class="fas fa-address-card me-2 text-primary"></i>Informations Personnelles
                                </h6>

                                <div class="row g-3 mb-4">
                                    <div class="col-md-6">
                                        <label asp-for="Prenom" class="form-label small fw-bold text-muted">Prénom *</label>
                                        <input asp-for="Prenom" class="form-control bg-light border-0 px-3 py-2" placeholder="Ex: Thomas" />
                                        <span asp-validation-for="Prenom" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Nom" class="form-label small fw-bold text-muted">Nom *</label>
                                        <input asp-for="Nom" class="form-control bg-light border-0 px-3 py-2" placeholder="Ex: Dupont" />
                                        <span asp-validation-for="Nom" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Email" class="form-label small fw-bold text-muted">Email Professionnel *</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0 text-muted ps-3"><i class="far fa-envelope"></i></span>
                                        <input asp-for="Email" class="form-control bg-light border-0 py-2" placeholder="thomas.dupont@example.com" />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>


                                <div class="mb-3">
                                    <label asp-for="DateNaissance" class="form-label small fw-bold text-muted">Date de Naissance</label>
                                    <input asp-for="DateNaissance" type="date" class="form-control bg-light border-0 px-3 py-2" />
                                    <span asp-validation-for="DateNaissance" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6 border-start-lg pl-lg-5">
                                <h6 class="fw-bold text-muted text-uppercase small mb-4 border-bottom pb-2">
                                    <i class="fas fa-briefcase me-2 text-success"></i>Expérience & Profil
                                </h6>

                                <div class="mb-4">
                                    <label asp-for="Ville" class="form-label small fw-bold text-muted">Ville Actuelle *</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0 text-muted ps-3"><i class="fas fa-map-marker-alt text-danger small"></i></span>
                                        <input asp-for="Ville" class="form-control bg-light border-0 py-2" placeholder="Ex: Lyon, Paris..." />
                                    </div>
                                    <span asp-validation-for="Ville" class="text-danger small"></span>
                                </div>

                                <div class="mb-5">
                                    <label asp-for="AnneesExperienceTotal" class="form-label small fw-bold text-muted">Années d'expérience *</label>
                                    <div class="d-flex align-items-center bg-light rounded px-3 py-2">
                                        <i class="fas fa-graduation-cap text-muted me-3 fa-lg"></i>
                                        <input asp-for="AnneesExperienceTotal" type="number" min="0" max="50" class="form-control border-0 bg-transparent fw-bold text-dark" style="font-size: 1.2rem;" placeholder="0" />
                                        <span class="text-muted small text-uppercase fw-bold ms-2">Ans</span>
                                    </div>
                                    <div class="form-text small mt-2">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Utilisé pour le calcul automatique du niveau (Junior/Senior).
                                    </div>
                                    <span asp-validation-for="AnneesExperienceTotal" class="text-danger small"></span>
                                </div>

                                <div class="p-4 rounded-3 bg-primary bg-opacity-10 text-center border border-primary border-opacity-25">
                                    <i class="fas fa-file-upload fa-2x text-primary mb-3 opacity-50"></i>
                                    <h6 class="fw-bold text-dark mb-1">Documents & CV</h6>
                                    <p class="small text-muted mb-0">La gestion des fichiers sera disponible prochainement.</p>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="card-footer bg-white p-4 border-top">
                        <div class="d-flex justify-content-end gap-3">
                            <a asp-action="Index" class="btn btn-light border fw-bold rounded-pill px-4 py-2">Annuler</a>
                            <button type="submit" class="btn btn-primary-gradient fw-bold rounded-pill px-5 py-2 shadow-sm">
                                <i class="fas fa-check me-2"></i>Créer la fiche candidat
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}