@model Projet.Models.Personne
@{
    ViewData["Title"] = "Supprimer Candidat";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-lg rounded-4 text-center overflow-hidden">
                <div class="card-header bg-danger text-white py-4 border-0">
                    <i class="fas fa-user-times fa-3x opacity-75"></i>
                </div>
                <div class="card-body p-5">
                    <h3 class="fw-bold text-dark mb-3">Supprimer ce profil ?</h3>
                    <p class="text-muted mb-4">
                        Vous êtes sur le point de supprimer définitivement <strong>@Model.Prenom @Model.Nom</strong>.
                        Cette action est irréversible.
                    </p>

                    <div class="bg-light p-3 rounded mb-4 text-start border border-danger border-opacity-10">
                        <ul class="list-unstyled mb-0 small text-secondary">
                            <li class="mb-1"><i class="fas fa-envelope me-2 text-danger"></i>@Model.Email</li>
                            <li><i class="fas fa-map-marker-alt me-2 text-danger"></i>@Model.Ville</li>
                        </ul>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg shadow-sm fw-bold rounded-pill">
                                Confirmer la suppression
                            </button>
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none">
                                Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>