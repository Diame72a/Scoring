@model IEnumerable<Projet.Models.Personne>
@{
    ViewData["Title"] = "Vivier Candidats";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">👥 Vivier Candidats</h2>
            <p class="text-muted">Base de données des talents et analyse d'expérience.</p>
        </div>
        <a asp-action="Create" class="btn btn-success text-white shadow-sm" style="border-radius: 50px; background: linear-gradient(135deg, #2af598 0%, #009efd 100%); border:none;">
            <i class="fas fa-user-plus me-2"></i>Ajouter un profil
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body row align-items-center">
            <div class="col-md-3 border-end text-center">
                <h1 class="display-4 fw-bold text-success">@Model.Count()</h1>
                <p class="text-muted small text-uppercase fw-bold">Candidats Totaux</p>
            </div>
            <div class="col-md-9">
                <h6 class="fw-bold text-muted mb-3 ms-3">Répartition par Expérience</h6>
                <div style="height: 100px; width: 100%;">
                    <canvas id="chartExp"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Candidat</th>
                        <th>Email</th>
                        <th>Localisation</th>
                        <th>Expérience</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3 small"
                                         style="width: 35px; height: 35px;">
                                        @item.Prenom.Substring(0, 1)@item.Nom.Substring(0, 1)
                                    </div>
                                    <div>
                                        <div class="fw-bold">@item.Prenom @item.Nom</div>
                                        <div class="small text-muted">Né(e) en @item.DateNaissance.Year</div>
                                    </div>
                                </div>
                            </td>
                            <td><a href="mailto:@item.Email" class="text-decoration-none text-muted"><i class="far fa-envelope me-1"></i> @item.Email</a></td>
                            <td>@item.Ville</td>
                            <td>
                                @if (item.AnneesExperienceTotal >= 5)
                                {
                                    <span class="badge bg-warning text-dark">Senior (@item.AnneesExperienceTotal ans)</span>
                                }
                                else if (item.AnneesExperienceTotal >= 2)
                                {

                                    <span class="badge bg-info text-white">Confirmé (@item.AnneesExperienceTotal ans)</span>
                                }
                                else
                                {

                                    <span class="badge bg-light text-muted border">Junior (@item.AnneesExperienceTotal ans)</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="text-muted me-3"><i class="fas fa-pen"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('chartExp').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(ViewBag.ExpLabels)),
            datasets: [{
                label: 'Candidats',
                data: @Html.Raw(Json.Serialize(ViewBag.ExpData)),
                backgroundColor: ['#e2e8f0', '#36b9cc', '#1cc88a'],
                borderRadius: 4,
                barPercentage: 0.5
            }]
        },
        options: {
            indexAxis: 'y', 
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { display: false } },
            scales: { x: { grid: { display: false } }, y: { grid: { display: false } } }
        }
    });
</script>