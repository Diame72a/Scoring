@model IEnumerable<Projet.Models.Personne>
@{ ViewData["Title"] = "Vivier Candidats"; }

<div class="container-fluid py-4">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">👥 Vivier Candidats</h2>
            <p class="text-muted">Base de données des talents (@Model.Count() affichés).</p>
        </div>
        <a asp-action="Create" class="btn btn-success text-white shadow-sm rounded-pill px-4" 
           style="background: linear-gradient(135deg, #2af598 0%, #009efd 100%); border:none;">
            <i class="fas fa-user-plus me-2"></i>Ajouter un profil
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4 bg-white">
        <div class="card-body p-3">
            <form asp-action="Index" method="get" class="row g-2 align-items-center">
                
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                               class="form-control bg-light border-start-0" 
                               placeholder="Rechercher par nom, prénom, email...">
                    </div>
                </div>

                <div class="col-md-3">
                    <select name="villeFilter" class="form-select bg-light" onchange="this.form.submit()">
                        <option value="">🌍 Toutes les villes</option>
                        @if (ViewBag.VillesDisponibles != null)
                        {
                            foreach (var v in ViewBag.VillesDisponibles)
                            {
                                
                                if ((string)ViewData["CurrentVille"] == v)
                                {
                                    <option value="@v" selected>@v</option>
                                }
                                else
                                {
                                    <option value="@v">@v</option>
                                }
                            }
                        }
                    </select>
                </div>

                <div class="col-md-4 text-end">
                    <button type="submit" class="btn btn-primary-gradient px-4">Filtrer</button>
                    <a asp-action="Index" class="btn btn-light border ms-1">Réinitialiser</a>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body row align-items-center py-2">
                <div class="col-md-2 border-end text-center">
                    <h2 class="fw-bold text-success mb-0">@Model.Count()</h2>
                    <small class="text-muted text-uppercase fw-bold" style="font-size:0.65rem;">Résultats</small>
                </div>
                <div class="col-md-10">
                    <div style="height: 60px; width: 100%;">
                        <canvas id="chartExp"></canvas>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Candidat</th>
                        <th>Email</th>
                        <th>Localisation</th>
                        <th>Expérience</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-search fa-2x mb-3 opacity-25"></i><br />
                                Aucun candidat ne correspond à votre recherche.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model) {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3 small" 
                                             style="width: 35px; height: 35px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                            @item.Prenom.Substring(0,1)@item.Nom.Substring(0,1)
                                        </div>
                                        <div>
                                            <div class="fw-bold">@item.Prenom @item.Nom</div>
                                            <div class="small text-muted">Né(e) en @item.DateNaissance.Year</div>
                                        </div>
                                    </div>
                                </td>
                                <td><a href="mailto:@item.Email" class="text-decoration-none text-muted"><i class="far fa-envelope me-1"></i> @item.Email</a></td>
                                <td>
                                    <span class="badge bg-light text-dark border"><i class="fas fa-map-marker-alt me-1 text-danger"></i> @item.Ville</span>
                                </td>
                                <td>
                                    @if(item.AnneesExperienceTotal >= 5) { <span class="badge bg-warning text-dark">Senior (@item.AnneesExperienceTotal ans)</span> }
                                    else if(item.AnneesExperienceTotal >= 2) { <span class="badge bg-info text-white">Confirmé (@item.AnneesExperienceTotal ans)</span> }
                                    else { <span class="badge bg-secondary">Junior (@item.AnneesExperienceTotal ans)</span> }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light border me-1"><i class="fas fa-pen text-primary"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light border me-1"><i class="fas fa-eye text-secondary"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light border"><i class="fas fa-trash text-danger"></i></a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // On ne dessine le graph que s'il y a des données
    @if(Model.Any()) {
        <text>
        var ctx = document.getElementById('chartExp').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.ExpLabels)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(ViewBag.ExpData)),
                    backgroundColor: ['#e2e8f0', '#36b9cc', '#1cc88a'], 
                    borderRadius: 4,
                    barThickness: 20 
                }]
            },
            options: {
                indexAxis: 'y', 
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: { 
                    x: { display: false }, 
                    y: { grid: { display: false }, ticks: { font: { size: 10 } } } 
                }
            }
        });
        </text>
    }
</script>