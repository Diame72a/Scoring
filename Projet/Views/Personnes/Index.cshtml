@model IEnumerable<Projet.Models.Personne>
@{
    ViewData["Title"] = "Vivier Candidats";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center">
            <div class="rounded p-2 me-3 shadow-sm text-white"
                 style="background: linear-gradient(135deg, #2af598 0%, #009efd 100%); border:none;">
                <i class="fas fa-users fa-lg"></i>
            </div>
            <div>
                <h4 class="fw-bold mb-0 text-dark">Vivier Candidats</h4>
                <small class="text-muted">@Model.Count() profils disponibles</small>
            </div>
        </div>
        <a asp-action="Create" class="btn text-white shadow-sm fw-bold btn-sm px-4 rounded-pill"
           style="background: linear-gradient(135deg, #2af598 0%, #009efd 100%); border:none;">
            <i class="fas fa-user-plus me-2"></i>Ajouter un talent
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-2 bg-light rounded">
            <form asp-action="Index" method="get" class="row g-2 align-items-center">
                <div class="col-md-4">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-white border-end-0 text-muted"><i class="fas fa-search"></i></span>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                               class="form-control border-start-0" placeholder="Nom, Email...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select name="villeFilter" class="form-select form-select-sm" onchange="this.form.submit()">
                        <option value="">Toutes les villes</option>
                        @if (ViewBag.Villes != null)
                        {
                            foreach (var v in (List<string>)ViewBag.Villes)
                            {
                                if ((string)ViewData["CurrentVille"] == v)
                                {
                                    <option value="@v" selected>@v</option>
                                }
                                else
                                {
                                    <option value="@v">@v</option>
                                }
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none text-muted"><i class="fas fa-times me-1"></i>Effacer</a>
                </div>
            </form>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-9">
            <div class="card border-0 shadow-sm h-100">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-white border-bottom">
                            <tr class="text-muted small text-uppercase">
                                <th class="ps-4">Candidat</th>
                                <th>Contact</th>
                                <th>Localisation</th>
                                <th>Niveau</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        <i class="fas fa-user-slash fa-2x mb-3 opacity-25"></i><br />
                                        Aucun candidat trouvé.
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle text-white d-flex align-items-center justify-content-center me-2 small fw-bold"
                                                     style="width: 32px; height: 32px; background: linear-gradient(135deg, #2af598 0%, #009efd 100%);">
                                                    @item.Prenom.Substring(0, 1)@item.Nom.Substring(0, 1)
                                                </div>
                                                <span class="fw-bold text-dark">@item.Prenom @item.Nom</span>
                                            </div>
                                        </td>
                                        <td class="text-muted small">
                                            <a href="mailto:@item.Email" class="text-decoration-none text-muted">@item.Email</a>
                                        </td>
                                        <td>
                                            <i class="fas fa-map-marker-alt text-danger me-1 small"></i> @item.Ville
                                        </td>
                                        <td>
                                            @if (item.AnneesExperienceTotal >= 5)
                                            {
                                                <span class="badge bg-warning text-dark border">Senior</span>
                                            }
                                            else if (item.AnneesExperienceTotal >= 2)
                                            {

                                                <span class="badge bg-info text-white border">Confirmé</span>
                                            }
                                            else
                                            {

                                                <span class="badge bg-light text-muted border">Junior</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light text-secondary border"><i class="fas fa-eye"></i></a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light text-primary border"><i class="fas fa-pen"></i></a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light text-danger border"><i class="fas fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-3">
            @if (Model.Any())
            {
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 fw-bold small text-uppercase text-muted">
                        Expérience
                    </div>
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div style="width: 100%; max-height: 200px;">
                            <canvas id="chartExp"></canvas>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 text-center">
                        <small class="text-muted" style="font-size: 0.7rem;">Basé sur les résultats affichés</small>
                    </div>
                </div>
            }
        </div>

    </div>
</div>

@if (Model.Any())
{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('chartExp').getContext('2d');
        new Chart(ctx, {
            type: 'pie', // Camembert
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.ExpLabels)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(ViewBag.ExpData)),
                    backgroundColor: ['#e2e8f0', '#36b9cc', '#f6c23e'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom', labels: { boxWidth: 8, font: { size: 10 } } }
                }
            }
        });
    </script>
}