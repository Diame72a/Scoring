@model IEnumerable<Projet.Models.Competence>
@{ ViewData["Title"] = "Catalogue Compétences"; }

<div class="container-fluid py-4">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <div class="bg-warning text-white rounded p-2 me-3 shadow-sm" 
                 style="background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%); border:none;">
                <i class="fas fa-tags fa-lg text-dark"></i>
            </div>
            <div>
                <h4 class="fw-bold mb-0 text-dark">Catalogue Compétences</h4>
                <small class="text-muted">Gérez vos @Model.Count() tags techniques</small>
            </div>
        </div>
        <a asp-action="Create" class="btn text-dark fw-bold shadow-sm btn-sm px-4" 
           style="background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%); border:none;">
            <i class="fas fa-plus me-2"></i>Nouvelle compétence
        </a>
    </div>

    <div class="row g-4 mb-4">
        
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4 d-flex flex-column justify-content-center">
                    <h6 class="fw-bold text-muted mb-3"><i class="fas fa-filter me-2"></i>Filtrer le catalogue</h6>
                    
                    <form asp-action="Index" method="get" class="row g-3 align-items-end">
                        <div class="col-md-7">
                            <label class="small text-muted fw-bold mb-1">Mots-clés</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted"><i class="fas fa-search"></i></span>
                                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                                       class="form-control border-start-0" placeholder="Ex: C#, Java...">
                            </div>
                        </div>
                        
                        <div class="col-md-3">
                            <label class="small text-muted fw-bold mb-1">Ordre</label>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]" 
                               class="btn btn-light border w-100 text-start d-flex justify-content-between align-items-center">
                                <span>A-Z</span>
                                <i class="fas fa-sort"></i>
                            </a>
                        </div>

                        <div class="col-md-2">
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none small w-100">
                                <i class="fas fa-times me-1"></i>Effacer
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            @if (Model.Any())
            {
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body d-flex align-items-center">
                        <div style="width: 120px; height: 120px; flex-shrink: 0;">
                            <canvas id="chartTrends"></canvas>
                        </div>
                        <div class="ms-3">
                            <h6 class="fw-bold mb-1">Top Demandes</h6>
                            <p class="small text-muted mb-0 lh-sm">
                                Compétences les plus recherchées dans vos offres actives.
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light border-bottom">
                    <tr class="text-muted small text-uppercase fw-bold">
                        <th class="ps-4 py-3">Intitulé</th>
                        <th>Statut</th>
                        <th>Offres Liées</th> <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">
                                <i class="fas fa-tag fa-2x mb-3 opacity-25"></i><br />
                                Aucune compétence trouvée.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle d-flex align-items-center justify-content-center me-3 fw-bold shadow-sm" 
                                             style="width: 38px; height: 38px; background-color: #fff0f3; color: #ff6b81; border: 1px solid #ffd1d8;">
                                            @if(!string.IsNullOrEmpty(item.Nom)) { @item.Nom.Substring(0,1).ToUpper() }
                                        </div>
                                        <span class="fw-bold text-dark">@item.Nom</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">Actif</span>
                                </td>
                                <td>
                                    <span class="small text-muted"><i class="fas fa-link me-1"></i> Disponible</span>
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white text-primary border-end" title="Modifier"><i class="fas fa-pen"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-white text-danger" title="Supprimer"><i class="fas fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-white border-0 py-3">
            <small class="text-muted">Affichage de @Model.Count() éléments</small>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('chartTrends').getContext('2d');
        new Chart(ctx, {
            type: 'doughnut', // J'ai remis Doughnut car PolarArea est trop grand pour une petite carte
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.TopLabels)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(ViewBag.TopData)),
                    backgroundColor: [
                        '#ff9a9e', '#fecfef', '#a18cd1', '#fbc2eb', '#8fd3f4'
                    ],
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }, // On cache la légende pour que ça rentre dans le petit carré
                    tooltip: { 
                        enabled: true,
                        callbacks: {
                            label: function(context) {
                                return context.label + ': ' + context.raw;
                            }
                        }
                    }
                },
                cutout: '70%'
            }
        });
    </script>
}