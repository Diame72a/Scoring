@model IEnumerable<Projet.Models.Competence>
@{
    ViewData["Title"] = "Catalogue Compétences";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">🎓 Catalogue des Compétences</h2>
            <p class="text-muted">Tags techniques et soft-skills utilisés par l'algorithme de scoring.</p>
        </div>
        <a asp-action="Create" class="btn text-white shadow-sm fw-bold px-4 rounded-pill"
           style="background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 99%); border:none; color: #555;">
            <i class="fas fa-plus me-2"></i>Nouvelle Compétence
        </a>
    </div>

    <div class="row g-4">

        <div class="col-lg-4">

            <div class="card border-0 shadow-sm mb-4 bg-primary text-white overflow-hidden" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body p-4 position-relative">
                    <h1 class="display-3 fw-bold mb-0">@Model.Count()</h1>
                    <p class="mb-0 opacity-75 fw-bold text-uppercase small">Compétences référencées</p>
                    <i class="fas fa-tags position-absolute" style="font-size: 8rem; right: -20px; bottom: -20px; opacity: 0.1;"></i>
                </div>
            </div>

            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white fw-bold border-0 pt-4">
                    🔥 Top 5 Demandés
                </div>
                <div class="card-body">
                    <div style="height: 250px;">
                        <canvas id="chartTrends"></canvas>
                    </div>
                    <p class="text-center text-muted small mt-3">
                        Basé sur les compétences requises dans vos offres actives.
                    </p>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <label class="small text-muted fw-bold text-uppercase mb-2">Recherche rapide</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" class="form-control bg-light border-0" placeholder="Filtrer (ex: Java)...">
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Liste complète</h5>
                    <button class="btn btn-sm btn-outline-light text-muted border"><i class="fas fa-sort-alpha-down"></i> A-Z</button>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Intitulé</th>
                                <th>Type</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded-circle d-flex align-items-center justify-content-center me-3 fw-bold shadow-sm"
                                                 style="width: 42px; height: 42px; background-color: #fff0f3; color: #ff6b81; font-family: 'Poppins', sans-serif;">
                                                @if (!string.IsNullOrEmpty(item.Nom))
                                                {
                                                    @item.Nom.Substring(0, 1).ToUpper()
                                                }
                                            </div>
                                            <div>
                                                <span class="fw-bold text-dark d-block">@item.Nom</span>
                                                <span class="small text-muted">ID: #@item.Id</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-secondary border rounded-pill px-3">Technique</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary border me-1 shadow-sm"><i class="fas fa-pen"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-secondary border me-1 shadow-sm"><i class="fas fa-eye"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger border shadow-sm"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var ctx = document.getElementById('chartTrends').getContext('2d');

        
        var labels = @Html.Raw(Json.Serialize(ViewBag.TopLabels));
        var data = @Html.Raw(Json.Serialize(ViewBag.TopData));

        
        if(labels.length === 0) {
            labels = ["C#", "SQL", "React", "Python", "Agile"];
            data = [0, 0, 0, 0, 0];
        }

        new Chart(ctx, {
            type: 'polarArea', 
            data: {
                labels: labels,
                datasets: [{
                    label: 'Demande',
                    data: data,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(75, 192, 192, 0.7)',
                        'rgba(153, 102, 255, 0.7)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { boxWidth: 10, font: { size: 11 } }
                    }
                },
                scales: {
                    r: {
                        ticks: { display: false }, 
                        grid: { color: '#f0f0f0' }
                    }
                }
            }
        });
    });
</script>