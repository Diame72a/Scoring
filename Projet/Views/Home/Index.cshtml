@model Projet.Models.HomeDashboardViewModel

@{
    ViewData["Title"] = "Tableau de Bord RH";
}

<div class="row mb-4 align-items-center">
    <div class="col-md-8">
        <h2 class="fw-bold text-dark mb-0">Tableau de Bord</h2>
        <p class="text-muted small">Vue d'ensemble de votre activité de recrutement.</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-controller="Scoring" asp-action="Index" class="btn btn-primary-gradient shadow-sm px-4">
            <i class="fas fa-magic me-2"></i>Lancer un Matching IA
        </a>
    </div>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 overflow-hidden">
            <div class="card-body p-4 position-relative">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-uppercase fw-bold text-muted small mb-1">Offres Ouvertes</p>
                        <h2 class="display-5 fw-bold text-primary mb-0">@Model.NbOffres</h2>
                    </div>
                    <div class="p-3 rounded-3 bg-primary bg-opacity-10 text-primary">
                        <i class="fas fa-briefcase fa-2x"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <a asp-controller="Offres" asp-action="Index" class="small text-decoration-none fw-bold">Gérer les offres <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
                <div class="position-absolute bg-primary rounded-circle" style="width: 150px; height: 150px; top: -50px; right: -50px; opacity: 0.05;"></div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 overflow-hidden">
            <div class="card-body p-4 position-relative">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-uppercase fw-bold text-muted small mb-1">Vivier Talents</p>
                        <h2 class="display-5 fw-bold text-success mb-0">@Model.NbCandidats</h2>
                    </div>
                    <div class="p-3 rounded-3 bg-success bg-opacity-10 text-success">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <a asp-controller="Personnes" asp-action="Index" class="small text-decoration-none fw-bold text-success">Voir la liste <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
                <div class="position-absolute bg-success rounded-circle" style="width: 150px; height: 150px; top: -50px; right: -50px; opacity: 0.05;"></div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 overflow-hidden">
            <div class="card-body p-4 position-relative">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-uppercase fw-bold text-muted small mb-1">Tags Compétences</p>
                        <h2 class="display-5 fw-bold text-warning mb-0">@Model.NbCompetences</h2>
                    </div>
                    <div class="p-3 rounded-3 bg-warning bg-opacity-10 text-warning">
                        <i class="fas fa-tags fa-2x"></i>
                    </div>
                </div>
                <div class="mt-4">
                    <a asp-controller="Competences" asp-action="Index" class="small text-decoration-none fw-bold text-warning">Catalogue <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
                <div class="position-absolute bg-warning rounded-circle" style="width: 150px; height: 150px; top: -50px; right: -50px; opacity: 0.05;"></div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between">
                <h6 class="fw-bold mb-0">📊 Répartition des Offres par Métier</h6>
            </div>
            <div class="card-body px-4 pb-4">
                <div style="height: 300px;">
                    <canvas id="chartMetiers"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <h6 class="fw-bold mb-0">🎓 Niveaux d'Expérience</h6>
            </div>
            <div class="card-body d-flex align-items-center justify-content-center position-relative">
                <div style="height: 220px; width: 100%;">
                    <canvas id="chartExp"></canvas>
                </div>
                <div class="position-absolute text-center" style="pointer-events: none;">
                    <span class="d-block display-6 fw-bold text-muted">@Model.NbCandidats</span>
                    <span class="small text-uppercase text-muted" style="font-size: 0.65rem;">Profils</span>
                </div>
            </div>
            <div class="card-footer bg-white border-0 text-center pb-4">
                <small class="text-muted">Répartition Junior / Confirmé / Senior</small>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                <h6 class="fw-bold mb-0">⚡ Activités Récentes</h6>
                <span class="badge bg-light text-secondary border">Temps réel</span>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush mt-2">
                    @if (Model.Activites.Any())
                    {
                        @foreach (var item in Model.Activites)
                        {
                            var isOffre = item.Type == "Offre";
                            var icon = isOffre ? "fa-plus" : "fa-user";
                            var color = isOffre ? "bg-primary-subtle text-primary" : "bg-success-subtle text-success";
                            var controller = isOffre ? "Offres" : "Personnes";

                            <a asp-controller="@controller" asp-action="Details" asp-route-id="@item.Id" class="list-group-item list-group-item-action border-0 px-4 py-3 d-flex align-items-center">
                                <div class="rounded-circle p-2 me-3 d-flex align-items-center justify-content-center @color" style="width: 35px; height: 35px;">
                                    <i class="fas @icon small"></i>
                                </div>
                                <div>
                                    <div class="fw-bold text-dark small">@item.Titre</div>
                                    <div class="text-muted" style="font-size: 0.8rem;">@item.SousTitre</div>
                                </div>
                                <small class="ms-auto text-muted" style="font-size: 0.7rem;">#@item.Id</small>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted small">Aucune activité récente.</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card border-0 shadow-sm h-100 bg-primary text-white" style="background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);">
            <div class="card-body p-5 d-flex flex-column justify-content-center text-center">
                <h3 class="fw-bold mb-3">Besoin d'aller vite ?</h3>
                <p class="mb-4 opacity-75">Utilisez les raccourcis pour alimenter votre base de données.</p>

                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Offres" asp-action="Create" class="btn btn-light text-primary fw-bold shadow-sm">
                        <i class="fas fa-plus-circle me-2"></i>Nouvelle Offre
                    </a>
                    <a asp-controller="Personnes" asp-action="Create" class="btn btn-outline-light fw-bold">
                        <i class="fas fa-user-plus me-2"></i>Nouveau Candidat
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {

        // --- GRAPHIQUE 1 : OFFRES (BARRES) ---
        const ctxMetiers = document.getElementById('chartMetiers').getContext('2d');
        const labelsMetiers = @Html.Raw(Json.Serialize(Model.LabelsMetiers));
        const dataMetiers = @Html.Raw(Json.Serialize(Model.DataMetiers));

        // Dégradé bleu
        let gradientBar = ctxMetiers.createLinearGradient(0, 0, 0, 300);
        gradientBar.addColorStop(0, '#4e73df');
        gradientBar.addColorStop(1, '#224abe');

        new Chart(ctxMetiers, {
            type: 'bar',
            data: {
                labels: labelsMetiers,
                datasets: [{
                    label: 'Postes',
                    data: dataMetiers,
                    backgroundColor: gradientBar,
                    borderRadius: 5,
                    barThickness: 30
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { borderDash: [5, 5] } },
                    x: { grid: { display: false } }
                }
            }
        });

        // --- GRAPHIQUE 2 : EXPÉRIENCE (DONUT) ---
        const ctxExp = document.getElementById('chartExp').getContext('2d');
        const dataExp = @Html.Raw(Json.Serialize(Model.DataExperience)); // [Junior, Confirme, Senior]

        new Chart(ctxExp, {
            type: 'doughnut',
            data: {
                labels: ['Junior (<2 ans)', 'Confirmé (2-5 ans)', 'Senior (5+ ans)'],
                datasets: [{
                    data: dataExp,
                    backgroundColor: ['#d1d3e2', '#36b9cc', '#1cc88a'], // Gris, Cyan, Vert
                    borderWidth: 0,
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '75%', // Trou du donut large
                plugins: {
                    legend: { position: 'bottom', labels: { usePointStyle: true, boxWidth: 8 } }
                }
            }
        });
    });
</script>