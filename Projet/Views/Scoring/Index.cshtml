@model IEnumerable<Projet.Models.Offre>

@{
    ViewData["Title"] = "Lancer un Matching";
}

<div class="container py-5">

    <div class="card border-0 shadow-lg overflow-hidden rounded-4" style="min-height: 500px;">
        <div class="row g-0 h-100">

            <div class="col-lg-5 text-white d-flex flex-column justify-content-center p-5"
                 style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">

                <div class="mb-4">
                    <div class="bg-white bg-opacity-25 rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 64px; height: 64px;">
                        <i class="fas fa-robot fa-2x text-white"></i>
                    </div>
                </div>

                <h2 class="fw-bold mb-3">NexaScore™</h2>
                <p class="lead mb-4 opacity-75">
                    Notre algorithme analyse vos candidats en temps réel pour identifier les meilleurs profils.
                </p>

                <ul class="list-unstyled opacity-75 small">
                    <li class="mb-2"><i class="fas fa-check-circle me-2"></i>Analyse sémantique des compétences</li>
                    <li class="mb-2"><i class="fas fa-check-circle me-2"></i>Calcul de l'expérience réelle</li>
                    <li class="mb-2"><i class="fas fa-check-circle me-2"></i>Géo-localisation intelligente</li>
                </ul>

                <div class="mt-auto pt-5">
                    <small class="text-white-50">Version 1.0.2 • Moteur Déterministe</small>
                </div>
            </div>

            <div class="col-lg-7 bg-white p-5 d-flex flex-column justify-content-center">

                <div class="d-flex justify-content-between align-items-center mb-5">
                    <h4 class="fw-bold text-dark mb-0">Configurer l'analyse</h4>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-light btn-sm rounded-pill px-3 text-muted">
                        <i class="fas fa-times me-1"></i> Fermer
                    </a>
                </div>

                @if (Model.Any())
                {
                    <div class="mb-4">
                        <label class="form-label fw-bold text-uppercase small text-muted mb-2">Offre Cible</label>
                        <div class="input-group input-group-lg shadow-sm">
                            <span class="input-group-text bg-white border-end-0 text-primary ps-3">
                                <i class="fas fa-briefcase"></i>
                            </span>
                            <select id="offerSelect" class="form-select border-start-0 ps-2" onchange="updateLaunchButton()" style="cursor: pointer;">
                                <option selected disabled value="">-- Sélectionner un poste --</option>
                                @foreach (var offre in Model)
                                {
                                    <option value="@offre.Id">@offre.Titre (@offre.Poste?.Intitule)</option>
                                }
                            </select>
                        </div>
                        <div class="form-text mt-2">
                            L'algorithme comparera cette offre avec les @ViewBag.NbCandidats candidats de la base.
                        </div>
                    </div>

                    <div class="d-grid mt-4">
                        <a id="btnLaunch" href="#" class="btn btn-primary-gradient btn-lg py-3 disabled shadow-md transition-all">
                            <span id="btnText" class="fw-bold">Commencer le matching</span>
                            <i class="fas fa-arrow-right ms-2"></i>
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <div class="text-warning mb-3"><i class="fas fa-exclamation-circle fa-3x"></i></div>
                        <h5>Aucune offre disponible</h5>
                        <p class="text-muted mb-4">Vous devez créer une offre avant de pouvoir la matcher.</p>
                        <a asp-controller="Offres" asp-action="Create" class="btn btn-outline-primary">Créer une offre</a>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<script>
    function updateLaunchButton() {
        var selectBox = document.getElementById("offerSelect");
        var selectedId = selectBox.value;
        var btn = document.getElementById("btnLaunch");
        var btnText = document.getElementById("btnText");

        if (selectedId) {
            btn.href = "/Scoring/Calculer/" + selectedId;
            btn.classList.remove("disabled");
            btnText.innerText = "Lancer l'analyse maintenant";

            // Petit effet visuel
            btn.classList.add("shadow-lg");
        } else {
            btn.classList.add("disabled");
            btnText.innerText = "Commencer le matching";
            btn.classList.remove("shadow-lg");
        }
    }
</script>