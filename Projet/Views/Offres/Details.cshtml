@using System.Linq
@model Projet.Models.Offre

@{
    ViewData["Title"] = "Détails de l'offre";
}

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<div class="container py-5">

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Offres</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Titre</li>
        </ol>
    </nav>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100 rounded-4">
                <div class="card-body p-5">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h2 class="fw-bold text-dark mb-1">@Model.Titre</h2>
                            <span class="badge bg-light text-dark border fw-normal">
                                <i class="fas fa-briefcase me-1"></i> @Model.Poste?.Intitule
                            </span>
                        </div>
                        <div class="rounded-circle d-flex align-items-center justify-content-center text-white shadow-sm fw-bold"
                             style="width: 50px; height: 50px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); font-size: 1.5rem;">
                            @Model.Titre.Substring(0, 1)
                        </div>
                    </div>

                    <h5 class="text-muted text-uppercase small fw-bold mb-3"><i class="fas fa-align-left me-2"></i>Description du poste</h5>
                    <p class="text-secondary lh-lg mb-5" style="white-space: pre-line;">
                        @Model.Description
                    </p>

                    <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-4">
                        <h6 class="text-primary fw-bold mb-0"><i class="fas fa-tasks me-2"></i>Compétences Requises</h6>
                    </div>

                    @if (Model.CompetenceSouhaitees != null && Model.CompetenceSouhaitees.Any())
                    {
                        <div class="row g-3">
                            @foreach (var item in ((IEnumerable<Projet.Models.CompetenceSouhaitee>)Model.CompetenceSouhaitees).OrderByDescending(x => x.NiveauRequis))
                            {
                                <div class="col-md-6">
                                    <div class="p-3 bg-light border-0 rounded-3 position-relative">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="fw-bold text-dark">@item.Competence?.Nom</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <div class="progress flex-grow-1 me-2" style="height: 6px;">
                                                @{
                                                    var w = item.NiveauRequis * 20;
                                                    var c = item.NiveauRequis >= 4 ? "bg-danger" : (item.NiveauRequis >= 3 ? "bg-warning" : "bg-info");
                                                }
                                                <div class="progress-bar @c" role="progressbar" style="width: @w%"></div>
                                            </div>
                                            <span class="small fw-bold text-muted">Niveau @item.NiveauRequis</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning border-0 small d-flex align-items-center">
                            <i class="fas fa-exclamation-circle me-2 fa-lg"></i>
                            <div>Aucune compétence requise définie.</div>
                        </div>
                    }

                </div>
                <div class="card-footer bg-white border-0 p-4 pt-0">
                    <hr class="text-muted opacity-25 mb-4">
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light border text-muted fw-bold rounded-pill px-4">
                            <i class="fas fa-pen me-2"></i>Modifier
                        </a>
                        <a asp-controller="Scoring" asp-action="Calculer" asp-route-id="@Model.Id" class="btn btn-primary-gradient px-4 shadow-sm rounded-pill fw-bold">
                            <i class="fas fa-magic me-2"></i>Lancer le Matching
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">

            <div class="card shadow-sm border-0 mb-4 rounded-4">
                <div class="card-header bg-white fw-bold py-3 rounded-top-4">Critères Clés</div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item px-4 py-3 border-0">
                        <small class="text-muted d-block mb-1">Localisation cible</small>
                        <span class="fw-bold text-dark"><i class="fas fa-map-marker-alt me-2 text-danger"></i>@Model.VilleCible (@Model.CodePostalCible)</span>
                    </div>
                    <div class="list-group-item px-4 py-3 border-0 bg-light">
                        <small class="text-muted d-block mb-1">Date de publication</small>
                        <span class="fw-bold text-dark"><i class="far fa-calendar-alt me-2 text-info"></i>@(Model.DateCreation?.ToString("dd MMMM yyyy") ?? "N/A")</span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4 overflow-hidden rounded-4">
                <div class="card-header bg-white fw-bold py-3 border-bottom">
                    <i class="fas fa-map me-2 text-primary"></i>Situation Géographique
                </div>
                <div id="map" style="height: 250px; width: 100%;"></div>
            </div>

            <div class="card border-danger border-opacity-25 bg-danger bg-opacity-10 shadow-sm border-0 rounded-4">
                <div class="card-body">
                    <h6 class="text-danger fw-bold"><i class="fas fa-exclamation-triangle me-2"></i>Zone Danger</h6>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger w-100 mt-2">Supprimer l'offre</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var ville = "@Html.Raw(Model.VilleCible)";
        var cp = "@Html.Raw(Model.CodePostalCible)";
        var query = ville + " " + cp + " France"; // On précise France pour aider l'API

        // Vue par défaut (France)
        var map = L.map('map').setView([46.603354, 1.888334], 5);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        if(ville) {
            fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(query)}`)
                .then(response => response.json())
                .then(data => {
                    if (data && data.length > 0) {
                        var lat = data[0].lat;
                        var lon = data[0].lon;
                        map.setView([lat, lon], 13);
                        L.marker([lat, lon]).addTo(map)
                            .bindPopup(`<b>${ville}</b><br>Poste basé ici`)
                            .openPopup();
                    }
                })
                .catch(err => console.error("Erreur géocodage:", err));
        }
    });
</script>