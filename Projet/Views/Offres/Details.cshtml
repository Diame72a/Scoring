@model Projet.Models.Offre

@{
    ViewData["Title"] = "Détails de l'offre";
}

<div class="container py-5">

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Offres</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Titre</li>
        </ol>
    </nav>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-5">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <h1 class="fw-bold text-dark mb-0">@Model.Titre</h1>
                        <span class="badge bg-primary-subtle text-primary border border-primary-subtle">Actif</span>
                    </div>

                    <h5 class="text-muted text-uppercase small fw-bold mb-3"><i class="fas fa-align-left me-2"></i>Description du poste</h5>

                    <p class="text-secondary lh-lg" style="white-space: pre-line;">
                        @Model.Description
                    </p>
                </div>
                <div class="card-footer bg-white border-0 p-4 pt-0">
                    <hr class="text-muted opacity-25 mb-4">
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary-gradient">
                            <i class="fas fa-pen me-2"></i>Modifier
                        </a>
                        <a asp-controller="Scoring" asp-action="Calculer" asp-route-id="@Model.Id" class="btn btn-outline-primary border-2 fw-bold">
                            <i class="fas fa-magic me-2"></i>Lancer un Matching
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white fw-bold py-3">Informations Clés</div>
                <div class="list-group list-group-flush">
                    <div class="list-group-item px-4 py-3 border-0">
                        <small class="text-muted d-block mb-1">Métier de référence</small>
                        <span class="fw-bold text-dark"><i class="fas fa-tag me-2 text-primary"></i>@Model.Poste?.Intitule</span>
                    </div>
                    <div class="list-group-item px-4 py-3 border-0 bg-light">
                        <small class="text-muted d-block mb-1">Localisation</small>
                        <span class="fw-bold text-dark"><i class="fas fa-map-marker-alt me-2 text-danger"></i>@Model.VilleCible (@Model.CodePostalCible)</span>
                    </div>
                    <div class="list-group-item px-4 py-3 border-0">
                        <small class="text-muted d-block mb-1">Date de publication</small>
                        <span class="fw-bold text-dark">
                            <i class="far fa-calendar-alt me-2 text-info"></i>
                            @(Model.DateCreation.HasValue? Model.DateCreation.Value.ToString("dd MMMM yyyy") : "Date inconnue")
                        </span>
                    </div>
                    <div class="list-group-item px-4 py-3 border-0">
                        <small class="text-muted d-block mb-1">Référence interne</small>
                        <span class="font-monospace text-secondary">REF-@Model.Id.ToString("D6")</span>
                    </div>
                </div>
            </div>

            <div class="card border-danger border-opacity-25 bg-danger bg-opacity-10 shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-danger fw-bold"><i class="fas fa-exclamation-triangle me-2"></i>Zone Danger</h6>
                    <p class="small text-muted mb-3">Une fois supprimée, cette offre ne pourra plus être récupérée.</p>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger w-100">Supprimer l'offre</a>
                </div>
            </div>
        </div>
    </div>
</div>