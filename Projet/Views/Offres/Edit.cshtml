@model Projet.Models.Offre

@{
    ViewData["Title"] = "Modifier l'offre";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-light py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-dark"><i class="fas fa-pen-fancy me-2"></i>Modifier l'offre #@Model.Id</h5>
                    <span class="badge bg-warning text-dark">Mode Édition</span>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="DateCreation" /> <div class="row g-3 mb-3">
                            <div class="col-md-7">
                                <div class="form-floating">
                                    <input asp-for="Titre" class="form-control" placeholder="Titre" />
                                    <label asp-for="Titre">Titre de l'annonce</label>
                                    <span asp-validation-for="Titre" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-floating">
                                    <select asp-for="PosteId" class="form-select" asp-items="ViewBag.PosteId"></select>
                                    <label asp-for="PosteId">Métier de référence</label>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-8">
                                <div class="form-floating">
                                    <input asp-for="VilleCible" class="form-control" placeholder="Ville" />
                                    <label asp-for="VilleCible">Ville</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="CodePostalCible" class="form-control" placeholder="CP" />
                                    <label asp-for="CodePostalCible">Code Postal</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-4">
                            <textarea asp-for="Description" class="form-control" style="height: 200px" placeholder="Desc"></textarea>
                            <label asp-for="Description">Description détaillée</label>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center border-top pt-3">
                            <a asp-action="Index" class="text-decoration-none text-muted"><i class="fas fa-arrow-left me-1"></i> Retour</a>
                            <button type="submit" class="btn btn-primary-gradient px-4 shadow-sm">Enregistrer les modifications</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>