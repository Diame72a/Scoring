@model IEnumerable<Projet.Models.Offre>

@{
    ViewData["Title"] = "Gestion des Offres";
}

<div class="container-fluid py-4">
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">📢 Offres d'emploi</h2>
            <p class="text-muted">Gérez vos postes ouverts et analysez la répartition géographique.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary-gradient shadow-sm">
            <i class="fas fa-plus me-2"></i>Créer une offre
        </a>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 fw-bold">📍 Répartition Géographique</div>
                <div class="card-body">
                    <canvas id="chartVilles" style="max-height: 200px;"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100 p-4 d-flex flex-column justify-content-center bg-primary-subtle">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-white p-3 rounded-circle text-primary shadow-sm me-3">
                        <i class="fas fa-layer-group fa-2x"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@Model.Count()</h3>
                        <p class="mb-0 text-muted">Offres actives au total</p>
                    </div>
                </div>
                <p class="small text-muted">
                    Conseil Pro : Pensez à vérifier régulièrement les dates de création pour fermer les offres obsolètes.
                </p>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 fw-bold">Liste détaillée</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Titre du poste</th>
                        <th>Métier (Poste)</th>
                        <th>Localisation</th>
                        <th>Date Création</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3 fw-bold text-primary" 
                                         style="width: 40px; height: 40px; border: 1px solid #eef2f7;">
                                        @item.Titre.Substring(0, 1).ToUpper()
                                    </div>
                                    <div class="fw-bold text-dark">@item.Titre</div>
                                </div>
                            </td>
                            
                            <td><span class="badge bg-info-subtle text-info border border-info-subtle">@item.Poste?.Intitule</span></td>
                            
                            <td>
                                <i class="fas fa-map-marker-alt text-muted me-1 small"></i> 
                                @item.VilleCible <span class="text-muted small">(@item.CodePostalCible)</span>
                            </td>
                            
                            <td>@(item.DateCreation?.ToString("dd MMM yyyy") ?? "-")</td>
                            
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary border me-1" title="Modifier">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-secondary border me-1" title="Voir">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger border" title="Supprimer">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('chartVilles').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: @Html.Raw(Json.Serialize(ViewBag.VillesLabels)),
            datasets: [{
                data: @Html.Raw(Json.Serialize(ViewBag.VillesData)),
                backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b'],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'right', labels: { usePointStyle: true, boxWidth: 6 } }
            },
            cutout: '75%' // Anneau fin
        }
    });
</script>