@model Projet.Models.Poste
@{
    ViewData["Title"] = "Modifier Métier";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-header bg-light py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-edit me-2"></i>Modifier l'intitulé</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Intitule" class="form-control" />
                            <label asp-for="Intitule">Intitulé du poste</label>
                            <span asp-validation-for="Intitule" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none">Retour</a>
                            <button type="submit" class="btn btn-primary shadow-sm px-4">Sauvegarder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>