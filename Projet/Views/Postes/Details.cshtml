@model Projet.Models.Poste
@{
    ViewData["Title"] = "Détails Poste";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 text-center">
                <div class="card-body p-5">
                    <div class="mb-4 text-primary">
                        <i class="fas fa-user-tie fa-4x"></i>
                    </div>

                    <h2 class="fw-bold text-dark mb-1">@Model.Intitule</h2>
                    <p class="text-muted mb-4">Référence interne : POSTE-@Model.Id</p>

                    <div class="row g-2 mb-4">
                        <div class="col-12">
                            <div class="p-3 bg-light rounded border">
                                <span class="d-block text-muted small text-uppercase fw-bold">Offres liées</span>
                                <span class="display-6 fw-bold text-dark">@ViewBag.NbOffresLiees</span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">Modifier</a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">Retour liste</a>
                    </div>
                </div>

                <div class="card-footer bg-danger bg-opacity-10 border-top-0 p-3">
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="text-danger text-decoration-none small fw-bold">
                        <i class="fas fa-trash me-1"></i> Supprimer ce métier
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>