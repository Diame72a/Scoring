@model IEnumerable<Projet.Models.Poste>
@{
    ViewData["Title"] = "Référentiel Métiers";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">💼 Référentiel Métiers</h2>
            <p class="text-muted">Liste des intitulés de postes disponibles dans l'entreprise.</p>
        </div>
        <a asp-action="Create" class="btn text-white shadow-sm fw-bold px-4"
           style="border-radius: 50px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border:none;">
            <i class="fas fa-plus me-2"></i>Nouveau Métier
        </a>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white pt-4 border-0">
                    <h5 class="fw-bold mb-0">🏆 Top Recrutements</h5>
                    <p class="text-muted small">Métiers avec le plus d'offres actives</p>
                </div>
                <div class="card-body">
                    <div style="height: 250px;">
                        <canvas id="chartPostes"></canvas>
                    </div>
                </div>
                <div class="card-footer bg-light border-0 text-center">
                    <small class="text-muted">Données temps réel</small>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Liste des intitulés (@Model.Count())</h5>
                    <div class="input-group" style="width: 200px;">
                        <input type="text" class="form-control form-control-sm border-end-0" placeholder="Rechercher...">
                        <span class="input-group-text bg-white border-start-0"><i class="fas fa-search text-muted small"></i></span>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Intitulé du poste</th>
                                <th>Statut</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded p-2 me-3 bg-light text-primary">
                                                <i class="fas fa-user-tie fa-lg"></i>
                                            </div>
                                            <span class="fw-bold text-dark">@item.Intitule</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill">Actif</span>
                                    </td>
                                    <td class="text-end pe-4">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary border me-1"><i class="fas fa-pen"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light text-secondary border me-1"><i class="fas fa-eye"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger border"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        var ctx = document.getElementById('chartPostes').getContext('2d');

        var labels = @Html.Raw(Json.Serialize(ViewBag.Labels));
        var data = @Html.Raw(Json.Serialize(ViewBag.Data));

        if(labels.length === 0) {
            labels = ["Aucune donnée"]; data = [0];
        }

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: "Offres",
                    data: data,
                    backgroundColor: 'rgba(118, 75, 162, 0.7)', // Violet
                    borderRadius: 5,
                    barThickness: 20
                }]
            },
            options: {
                indexAxis: 'y', // Barres horizontales
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    x: { beginAtZero: true, grid: { display: false } },
                    y: { grid: { display: false } }
                }
            }
        });
    });
</script>